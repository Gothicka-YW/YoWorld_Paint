/* Sales Boards v1.3 6-grid layout styles */
#panel-sales .sales-wrap{display:grid; grid-template-columns:1.2fr 1fr; gap:16px; padding:16px 20px 20px; background:#fff;}
#panel-sales .sales-form{display:grid; gap:8px;}
#panel-sales .sales-row{display:grid; grid-template-columns:1fr 140px; gap:6px; align-items:center;}
#panel-sales .sales-url, #panel-sales .sales-cap{font-size:13px; padding:6px 8px; border:1px solid #d9d9d9; border-radius:4px;}
#panel-sales .sales-actions{display:flex; gap:8px; margin-top:4px;}
#panel-sales .sales-actions button{background:var(--accent); color:#fff; border:none; padding:6px 12px; border-radius:4px; cursor:pointer; font-family:Georgia,serif;}
#panel-sales .sales-actions button:hover{background:var(--accent-hover);}
#panel-sales .sales-preview{display:flex; flex-direction:column; align-items:center; gap:8px;}
#panel-sales .sales-preview canvas{border:1px solid #e5e5e5; border-radius:6px;}
nav[data-v-598e593b] .link.__sales>button{background:var(--accent); color:#fff;}
