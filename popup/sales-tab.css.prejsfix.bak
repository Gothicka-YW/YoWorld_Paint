/* Sales Boards v1.3.6 â€” layout & visibility fixes (popup width ~450px)
   Goals:
   - Make typed text clearly visible in inputs
   - Keep both columns (form + preview) fully visible in the 450px popup
   - Prevent accidental clipping; allow scrolling when needed
*/

/* ============ Container & Column Layout ============ */
#panel-sales .sales-wrap{
  display: grid;
  grid-template-columns: 1fr 1fr;     /* two equal columns that fit the 450px popup */
  gap: 12px;                          /* a bit tighter to avoid overflow */
  padding: 12px 12px 16px;
  background: #fff;
  box-sizing: border-box;
  max-width: 100%;
}

/* Allow the panel itself to scroll if contents exceed height */
#panel-sales{
  overflow: auto;
}

/* ============ Form ============ */
#panel-sales .sales-form{
  display: grid;
  gap: 8px;
  min-width: 0;                       /* allow grid children to shrink instead of overflow */
}

#panel-sales .sales-row{
  display: grid;
  grid-template-columns: minmax(0,1fr) 140px; /* input takes the remaining space, buttons column fixed */
  gap: 6px;
  align-items: center;
  min-width: 0;
}

/* Inputs: readable text + proper box-sizing */
#panel-sales .sales-url,
#panel-sales .sales-cap{
  font-size: 13px;
  padding: 6px 8px;
  border: 1px solid #d9d9d9;
  border-radius: 4px;
  color: #111;                        /* ensure typed text is clearly visible */
  background: #fff;
  width: 100%;                        /* fill available column */
  box-sizing: border-box;
  min-width: 0;                       /* prevent overflow when space is tight */
}

/* Placeholder color */
#panel-sales .sales-url::placeholder,
#panel-sales .sales-cap::placeholder{
  color: #888;
  opacity: 1;
}

/* Buttons next to each row */
#panel-sales .sales-actions{
  display: flex;
  gap: 8px;
  margin-top: 4px;
  flex-wrap: wrap;                     /* wrap on smaller widths instead of forcing overflow */
}

#panel-sales .sales-actions button{
  background: var(--accent);
  color: #fff;
  border: none;
  padding: 6px 10px;
  border-radius: 4px;
  cursor: pointer;
  font-family: Georgia, serif;
  line-height: 1;
  box-sizing: border-box;
}

#panel-sales .sales-actions button:hover{
  background: var(--accent-hover);
}

/* ============ Preview Column ============ */
#panel-sales .sales-preview{
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  min-width: 0;
}

#panel-sales .sales-preview canvas{
  display: block;
  border: 1px solid #e5e5e5;
  border-radius: 6px;
  max-width: 100%;                    /* never overflow the column */
  height: auto;
  box-sizing: border-box;
}

/* Ensure the Sales tab button stays accented (unchanged) */
nav[data-v-598e593b] .link.__sales>button{
  background: var(--accent);
  color: #fff;
}

/* ============ Safety: Narrow popups ============ */
@media (max-width: 460px){
  #panel-sales .sales-wrap{
    gap: 10px;
    padding: 10px;
  }
  #panel-sales .sales-row{
    grid-template-columns: minmax(0,1fr) 128px;
  }
}
