{
  "name": "YoWorld Paint",
  "description": "YoWorld Paint is for creating paint and sales boards within YoWorld.",
  "version": "2.2",
  "manifest_version": 3,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "action": {
    "default_title": "YoWorld Paint",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequestFeedback",
    "activeTab"
  ],
  "host_permissions": [
    "https://yoworld.info/*",
    "https://api.yoworld.info/*",
    "https://yoworld.com/*",
    "https://*.yoworld.com/*",
    "https://*.facebook.com/*",
    "https://*.fbcdn.net/*"
  ],
  "version_name": "v2.2"
}